@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogId</th>
            <th>@item.BlogTitle</th>
            <th>@item.BlogCreateDate</th>
            <th>@item.CategoryID</th>
            <th>@item.BlogStatus</th>
            <th><a href="#" class="btn btn-danger">Sil</a></th>
            <th><a href="#" class="btn btn-warning">Düzenle</a></th>
        </tr>
    }
    
    
</table>
<br />
<a href="#" class="btn btn-primary">Yeni Blog Oluştur</a>
